@foreach (var item in Model) {
    
    <a asp-controller="Schoen" asp-action="Index">  <h2>Schoenen</h2></a> 
    @foreach (var schoen in item.Schoenen){
      @if (aantalschoencat < 3){
            <a asp-controller="schoen" asp-action="Details" asp-route-id="@schoen.Id"><p>@schoen.Naam</p></a>
            aantalschoencat = aantalschoencat + 1;
        }
    }
          
