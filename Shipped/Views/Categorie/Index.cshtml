@model IEnumerable<login2.Models.Categorie>

@{
    ViewData["Title"] = "Index";
        var aantalschoencat = 0;
        var aantalkabelcat = 0;
        var aantaldronecat = 0;
        var aantalspelcomputercat = 0;
        var aantalhorlogecat = 0;
        var aantalfotocameracat = 0;
        
}
