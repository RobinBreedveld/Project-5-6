@model IEnumerable<login2.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h2>Gebruikersmanagement</h2>
<hr/> 

<p>
    <a asp-action="Create">Maak een nieuwe user aan</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>


                
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>



            <td>
                <button><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                <button><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                <button><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
